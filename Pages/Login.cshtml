@page
@model MyRazorApp.Pages.Login
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div style="max-width: 400px; margin: 4rem auto;">
    <div class="card">
        <h1 class="center" style="margin-bottom: 2rem;">Login</h1>
        <form method="post">
            <div style="margin-bottom: 1rem;">
                <label style="display: block; margin-bottom: 0.5rem; color: #aaa;">Usuário</label>
                <input type="text" name="username" placeholder="Digite seu usuário" required />
            </div>
            <div style="margin-bottom: 2rem;">
                <label style="display: block; margin-bottom: 0.5rem; color: #aaa;">Senha</label>
                <input type="password" name="password" placeholder="Digite sua senha" required />
            </div>
            <button type="submit" class="btn" style="width: 100%;">Entrar</button>
        </form>
    </div>
</div>
